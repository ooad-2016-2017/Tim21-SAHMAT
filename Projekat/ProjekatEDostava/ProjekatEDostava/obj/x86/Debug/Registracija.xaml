<Page
    x:Class="ProjekatEDostava.Registracija"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjekatEDostava"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>
            <Rectangle Fill="#FFF4F4F5" Grid.Row="0" HorizontalAlignment="Left" Height="1" Stroke="Black" VerticalAlignment="Bottom" Width="500"/>
            <TextBlock x:ConnectionId='7' x:Name="textBlock" Grid.Row="0" HorizontalAlignment="Left"  Margin="15,0,0,0" TextWrapping="Wrap" Text="Registracija" VerticalAlignment="Center" FontSize="30"/>
            <TextBlock x:ConnectionId='8' x:Name="textBlock1" Grid.Row="2" HorizontalAlignment="Left" Margin="15,0,0,0"  TextWrapping="Wrap" Text="Ime" VerticalAlignment="Center" FontSize="24"/>
            <TextBlock x:ConnectionId='9' x:Name="textBlock1_Copy" Grid.Row="3" HorizontalAlignment="Left" Margin="15,0,0,0" TextWrapping="Wrap" Text="Prezime" VerticalAlignment="Center" FontSize="24"/>
            <TextBlock x:ConnectionId='10' x:Name="textBlock1_Copy1" Grid.Row="4" HorizontalAlignment="Left" Margin="15,0,0,0" TextWrapping="Wrap" Text="Adresa" VerticalAlignment="Center" FontSize="24"/>
            <TextBlock x:ConnectionId='11' x:Name="textBlock1_Copy2" Grid.Row="5" HorizontalAlignment="Left" Margin="15,0,0,0" TextWrapping="Wrap" Text="E-mail" VerticalAlignment="Center" FontSize="24"/>
            <TextBlock x:ConnectionId='12' x:Name="textBlock1_Copy3" Grid.Row="6" HorizontalAlignment="Left" Margin="15,0,0,0" TextWrapping="Wrap" Text="Tel. br." VerticalAlignment="Center" FontSize="24"/>
            <TextBox x:ConnectionId='13' x:Name="textBox" Grid.Row="2" HorizontalAlignment="Left"  Margin="185,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Height="20" Width="225"/>
            <TextBox x:ConnectionId='14' x:Name="textBox_Copy" Grid.Row="3" HorizontalAlignment="Left"  Margin="185,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Height="20" Width="225"/>
            <TextBox x:ConnectionId='15' x:Name="textBox_Copy1" Grid.Row="4" HorizontalAlignment="Left"  Margin="185,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Height="20" Width="225"/>
            <TextBox x:ConnectionId='16' x:Name="textBox_Copy2" Grid.Row="5" HorizontalAlignment="Left"  Margin="185,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Height="20" Width="225"/>
            <TextBox x:ConnectionId='17' x:Name="textBox_Copy3" Grid.Row="6" HorizontalAlignment="Left"  Margin="185,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Height="20" Width="225"/>
        </Grid>
        <Grid Grid.Column="1" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="2.5*" />
                <RowDefinition Height="3.45*" />
            </Grid.RowDefinitions>
            <TextBlock x:ConnectionId='1' x:Name="textBlock1_Copy4" Grid.Row="4" Margin="15,0,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Slika" VerticalAlignment="Center" FontSize="24"/>
            <TextBlock x:ConnectionId='2' x:Name="textBlock1_Copy5" Grid.Row="2" Margin="15,0,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Password" VerticalAlignment="Center" FontSize="24"/>
            <TextBlock x:ConnectionId='3' x:Name="textBlock1_Copy6" Grid.Row="3" Margin="15,0,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Potvrdi password" VerticalAlignment="Center" FontSize="24"/>
            <PasswordBox x:ConnectionId='4' x:Name="passwordBox" Grid.Row="2" Margin="225,0,0,0" HorizontalAlignment="Left" Height="32" Width="225" VerticalAlignment="Center" FontSize="24"/>
            <PasswordBox x:ConnectionId='5' x:Name="passwordBox1" Grid.Row="3" Margin="225,0,0,0" HorizontalAlignment="Left" Height="32" Width="225" VerticalAlignment="Center" FontSize="24"/>
            <Button x:ConnectionId='6' x:Name="button" Grid.Row="5" Content="Registruj se" Margin="15,25,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="195"/>
        </Grid>
    </Grid>
</Page>

